<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/_bg__home_color"
    tools:context=".MainActivity"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/imgViewChef"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/imgViewRectanglee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/chef_ek2" />

    <TextView
        android:id="@+id/txtViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/paytone"
        android:text="@string/chefisa_string"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewChef"
        app:layout_constraintEnd_toEndOf="@+id/imgViewChef"
        app:layout_constraintStart_toStartOf="@+id/imgViewChef" />

    <ImageView
        android:id="@+id/imgViewRectanglee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="166dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgViewChef"
        android:src="@drawable/rectangle_1" />

    <ImageView
        android:id="@+id/imgViewSpoon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="12dp"


        android:background="@drawable/ellipse_1_shape"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewRectanglee"
        app:layout_constraintStart_toStartOf="@+id/imgViewRectanglee"
        app:layout_constraintTop_toTopOf="@+id/imgViewRectanglee"
        android:src="@drawable/spoon_img" />

    <TextView
        android:id="@+id/txtViewLetsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins"
        android:text="@string/start_string"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/imgViewRectanglee"
        app:layout_constraintEnd_toEndOf="@+id/imgViewRectanglee"
        app:layout_constraintStart_toEndOf="@+id/imgViewSpoon"
        app:layout_constraintTop_toTopOf="@+id/imgViewRectanglee" />

    




</androidx.constraintlayout.widget.ConstraintLayout>